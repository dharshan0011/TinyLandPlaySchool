    li a[href="/programs"] {
        background-color: #FFC30D;
        color: white;
    }

    #home {
        background-image: url("/images/prg-bg.webp");
        background-position: top;
        background-size: cover;
        background-repeat: no-repeat;
    }

    h1.heading {
        color: #263137;
